<% layout("./layouts/boilerplate")%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit Listing</h2>
            <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

                <div class="mb-3">
                    <lable for="title" class="form-lable">Title</lable>
                    <input class="form-control" type="text" name="listing[title]" value="<%=listing.title%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <lable for="description" class="form-lable">Description</lable>
                    <textarea class="form-control" type="text"
                        name="listing[description]" required><%=listing.description%></textarea>
                        <div class="invalid-feedback">
                            Please enter a short description
                        </div>
                </div>

                <div class="mb-3">
                    Original Listing Image <br>
                    <img src="<%=originalImageUrl%>" style="width: 200px;" alt="listing_image">
                </div>

                <div class="mb-3">
                    <lable for="image" class="form-lable">Upload New Image</lable>
                    <input class="form-control" type="file" name="listing[image]" >
                </div>
                <div class="row ">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-lable">Price</lable>
                        <input class="form-control" type="number" name="listing[price]" value="<%=listing.price%>" required>
                        <div class="invalid-feedback">
                            Price should be valid
                        </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-lable">Country</lable>
                        <input class="form-control" type="text" name="listing[country]" value="<%=listing.country%>" required>
                        <div class="invalid-feedback">
                            Country name should be valid
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <lable for="location" class="form-lable">Location</lable>
                    <input class="form-control disbaled" type="text" name="listing[location]" value="<%=listing.location%>" required>
                    <div class="invalid-feedback">
                        Location should be valid
                    </div>
                </div>
               
                <button class="btn edit-btn mt-3">Edit</button>
            </form>
        </div>
    </div>